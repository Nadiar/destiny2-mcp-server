# Required: Your Bungie API key (32 hex characters)
# Get one at: https://www.bungie.net/en/Application
BUNGIE_API_KEY=your32characterhexkeyhere12345678

# Optional: Logging level (debug, info, warn, error)
LOG_LEVEL=info

# Optional: Manifest cache TTL in hours (1-168, default: 24)
CACHE_TTL_HOURS=24

# Optional: Maximum cache size in MB (50-500, default: 100)
CACHE_MAX_SIZE_MB=100

# Optional: Minimum ms between API requests (50-1000, default: 150)
API_RATE_LIMIT_MS=150

# Optional: Max API retry attempts (0-5, default: 3)
API_MAX_RETRIES=3

# Optional: API request timeout in ms (5000-60000, default: 30000)
API_TIMEOUT_MS=30000
