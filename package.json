{
  "name": "destiny2-mcp-server",
  "version": "1.1.0",
  "description": "MCP server for Destiny 2 API integration",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "destiny2-mcp-server": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "dev:once": "tsx src/index.ts",
    "test": "vitest run --exclude tests/integration/**",
    "test:watch": "vitest --exclude tests/integration/**",
    "test:coverage": "vitest run --coverage --exclude tests/integration/**",
    "test:integration": "cross-env INTEGRATION_TEST=true vitest run tests/integration/",
    "test:integration:watch": "cross-env INTEGRATION_TEST=true vitest tests/integration/",
    "test:all": "cross-env INTEGRATION_TEST=true vitest run",
    "lint": "eslint src/ tests/ --ext .ts",
    "lint:fix": "eslint src/ tests/ --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "audit:security": "npm audit --audit-level=moderate"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "destiny2",
    "bungie",
    "api",
    "gaming",
    "destiny",
    "llm",
    "ai"
  ],
  "author": "Destiny 2 MCP Server Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/Nadiar/destiny2-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/Nadiar/destiny2-mcp-server/issues"
  },
  "homepage": "https://github.com/Nadiar/destiny2-mcp-server#readme",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "dotenv": "16.4.5",
    "zod": "4.1.13"
  },
  "devDependencies": {
    "@types/node": "24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "vitest": "^2.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    ".env.example"
  ],
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
